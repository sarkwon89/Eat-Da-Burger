<h1>Eat Da Burger!</h1>

<h2>Burgers requested!</h2>

<ul>
  {{#each burgerdb}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Burger Name: {{this.burger_name}}</p>
       <p>Devoured: {{this.devoured}}</p>
  	</li>
    <button class="delete-btn" data-id="{{this.id}}">DELETE</button>
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    {{!-- <label for="burger">Burger Name:</label> --}}
    <input type="text" id="burger" name="name" placeholder='Enter a burger you want to eat. Click "Submit"'>
  </div>

  <button type="submit">Submit</button>
</form>
