<h1>EAT DA BURGER</h1>


<div class="container">
  <div class="orderedbox">
    <h2>Burgers ordered!</h2>
    <ul>
      {{#each burgerdb}}
      {{#unless devoured}}
      {{> b/b-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="orderagainbox">
  <h2>Do you want to order again?</h2>

  <ul>
    {{#each burgerdb}}
    {{#if devoured}}
    {{> b/b-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>
  </div>

  <h2>Submit a burger order</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="b">Burger Name:</label>
      <input type="text" id="bb" name="name">
    </div>

    <button type="submit">Submit</button>
  </form>
</div>